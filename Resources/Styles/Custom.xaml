<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Finances.Resources.Styles.Custom">

    <!-- Font aliases as StaticResources (optional, makes XAML cleaner) -->
    <x:String x:Key="FontPacifico">Pacifico</x:String>
    <x:String x:Key="FontNunitoLight">NunitoLight</x:String>
    <x:String x:Key="FontNunitoRegular">NunitoRegular</x:String>
    <x:String x:Key="FontNunitoSemiBold">NunitoSemiBold</x:String>
    <x:String x:Key="FontNunitoBold">NunitoBold</x:String>

    <!-- Color tokens (tweak to your palette) -->
    <Color x:Key="TextPrimaryColor">White</Color>
    <Color x:Key="TextSecondaryColor">#a0a1a7</Color>
    <Color x:Key="AccentColor">#695608</Color>
    <Color x:Key="TextAccentColor">#e6b912</Color>
    <Color x:Key="ButtonBgColor">#18181a</Color>
    <Color x:Key="ButtonTextColor">#FFFFFF</Color>

    <!-- 1) App Title / Logo / Special Highlights -->
    <Style x:Key="TitleTextStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="{StaticResource FontPacifico}" />
        <Setter Property="FontSize" Value="34" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimaryColor}" />
        <Setter Property="LineBreakMode" Value="TailTruncation" />
        <Setter Property="SemanticProperties.HeadingLevel" Value="Level1" />
    </Style>

    <!-- 2) Headings (H1/H2) -->
    <Style x:Key="HeadingTextStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="{StaticResource FontNunitoBold}" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimaryColor}" />
        <Setter Property="SemanticProperties.HeadingLevel" Value="Level2" />
    </Style>

    <!-- Optional smaller heading -->
    <Style x:Key="SubheadingTextStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="{StaticResource FontNunitoSemiBold}" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="TextColor" Value="{StaticResource TextSecondaryColor}" />
        <Setter Property="SemanticProperties.HeadingLevel" Value="Level3" />
    </Style>

    <!-- 3) Body / Paragraphs -->
    <Style x:Key="BodyTextStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="{StaticResource FontNunitoRegular}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimaryColor}" />
        <Setter Property="LineHeight" Value="1.25" />
    </Style>

    <!-- 4) Small Details / Captions / Metadata -->
    <Style x:Key="CaptionTextStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="{StaticResource FontNunitoLight}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="TextColor" Value="{StaticResource TextSecondaryColor}" />
    </Style>

    <!-- 5) Buttons & CTAs -->
    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="FontFamily" Value="{StaticResource FontNunitoSemiBold}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="TextColor" Value="{StaticResource ButtonTextColor}" />
        <Setter Property="BackgroundColor" Value="{StaticResource AccentColor}" />
        <Setter Property="CornerRadius" Value="14" />
        <Setter Property="Padding" Value="18,12" />
        <Setter Property="MinimumHeightRequest" Value="48" />
    </Style>

    <Style x:Key="SecondaryButtonStyle" TargetType="Button">
        <Setter Property="FontFamily" Value="{StaticResource FontNunitoSemiBold}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="TextColor" Value="{StaticResource TextSecondaryColor}" />
        <Setter Property="BackgroundColor" Value="{StaticResource ButtonTextColor}" />
        <Setter Property="CornerRadius" Value="14" />
        <Setter Property="Padding" Value="18,12" />
        <Setter Property="MinimumHeightRequest" Value="48" />
        <Setter Property="BorderWidth" Value="2"/>
        <Setter Property="BorderColor" Value="{StaticResource ButtonBgColor}"/>
    </Style>

    <!-- 6) Accent Tag / Pill (uses Pacifico sparingly) -->
    <Style x:Key="AccentTagStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="{StaticResource FontPacifico}" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="BackgroundColor" Value="{StaticResource AccentColor}" />
        <Setter Property="Padding" Value="10,4" />
        <Setter Property="HorizontalOptions" Value="Start" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="HorizontalTextAlignment" Value="Center" />
        <Setter Property="VerticalTextAlignment" Value="Center" />
        <Setter Property="Margin" Value="0,6,0,6" />
        <Setter Property="Clip">
            <Setter.Value>
                <RoundRectangleGeometry CornerRadius="12" Rect="0,0,1000,1000" />
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 7) Entry / Editor text -->
    <Style x:Key="InputTextStyle" TargetType="Entry">
        <Setter Property="FontFamily" Value="{StaticResource FontNunitoRegular}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimaryColor}" />
        <Setter Property="HeightRequest" Value="48" />
    </Style>
</ResourceDictionary>